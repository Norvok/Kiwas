{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Notes Desktop",
  "version": "0.2.6",
  "identifier": "pl.vamare.notes",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Notes & Calendar",
        "width": 1100,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.vamare.pl/api/updates/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": ""
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": false,
    "targets": ["msi", "nsis"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/256x256.png", "icons/icon.png", "icons/icon.ico"],
    "windows": {
      "wix": {
        "language": ["pl-PL", "en-US"]
      },
      "nsis": {
        "languages": ["Polish", "English"],
        "displayLanguageSelector": true
      }
    },
    "copyright": "Copyright © 2026",
    "category": "Productivity",
    "shortDescription": "Aplikacja do zarządzania notatkami i kalendarzem",
    "longDescription": "Profesjonalna aplikacja desktopowa do zarządzania notatkami i kalendarzem z synchronizacją w czasie rzeczywistym."
  }
}
